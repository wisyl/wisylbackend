extends auth

block auth
  .login
    form.form-signin(action="/admins", method="post", role="form")
      input(type="hidden", name="_csrf", value=csrf_token)
  
      .form-label-group
        input#email.form-control(type='email' name='email' placeholder='Email address' required='' autofocus='' value=admin.email)
        label(for='email') Email address
      .form-label-group
        input#password.form-control(type='password' name='password' placeholder='Password' required='')
        label(for='password') Password
      .form-label-group
        input#name.form-control(type='text' name='name' placeholder='Name' required='' value=admin.name)
        label(for='name') Name
      button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign up
      .my-3.text-center
        | or 
        a.show-signup(href="/login") Log in
